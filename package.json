{
  "name": "ats-api",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Projektlabor-Rheine/ats-api/"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start server.js --watch --name \"API-Server\"",
    "startinst": "cross-env NODE_ENV=production pm2 start server.js -i 4",
    "mocha": "nyc mocha --timeout=5000 --exit",
    "test": "npm run fresh && npm run mocha",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "fresh": "npm run clean && npm run seed",
    "clean": "node clean.js",
    "seed": "node seed.js",
    "format": "prettier --write --config .prettierrc.json \"**/*.js\"",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "remark": "remark . -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run remark",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "bson": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "discord.js": "^12.5.1",
    "dotenv-safe": "^8.2.0",
    "ejs": "^3.1.5",
    "expeditious-engine-redis": "^0.1.2",
    "express": "^4.17.1",
    "express-expeditious": "^5.1.1",
    "express-list-endpoints": "^5.0.0",
    "express-validator": "^6.9.2",
    "helmet": "^3.21.2",
    "i18n": "^0.13.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.10",
    "mongoose-paginate-v2": "^1.3.13",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "nodemailer-mailgun-transport": "^2.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-ldapauth": "^3.0.1",
    "remark-cli": "^7.0.1",
    "request-ip": "^2.1.3",
    "trim-request": "^1.0.6",
    "uuid": "^3.3.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.1.0",
    "husky": "^4.3.7",
    "mocha": "^7.0.0",
    "mongo-seeding": "^3.5.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0"
  }
}
